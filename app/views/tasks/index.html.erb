<div class="container" >
  <h1>Your Tasks</h1>

<% if user_signed_in? %>
  <% if current_user.role == 'admin' %>
    <h4> <%= link_to 'New task', new_task_path %> </h4>
  <% end %>
  <ul>
    <% @tasks.each do |task| %> 
    <table class="table">
      
      <tbody>
        <tr>
          
          <td><%= link_to task.title, task_path(task) %></td>
          <% if current_user.role == 'admin' %>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, data: {
              turbo_method: :delete, 
              turbo_confirm: "Are you sure?"
              }  %></td>
          <% end %> 
          
        </tr>
       
      </tbody>
    </table>
    
    
    
    <% end %>
  </ul>
<% else %>
   <h4>Please Sign in for creating a new task and see tasks</h4>
<% end %>




</div>