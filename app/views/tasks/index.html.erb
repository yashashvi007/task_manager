<h1>All Tasks</h1>

<h4> <%= link_to 'New task', new_task_path %> </h4>

<ul>
  <% @tasks.each do |task| %> 
    <p>  <%= link_to task.title, task_path(task) %> </p>
    <p> <%= link_to 'Edit', edit_task_path(task) %> </p>
    <p> <%= link_to 'Destroy', task, data: {
      turbo_method: :delete, 
      turbo_confirm: "Are you sure?"
      }  %> </p>
  <% end %>
</ul>